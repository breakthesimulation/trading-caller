{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "research-engine/src/**/*",
    "api/src/**/*",
    "scoring/src/**/*",
    "scripts/**/*",
    "agent/**/*",
    "db/**/*",
    "learning/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
